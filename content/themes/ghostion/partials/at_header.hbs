<div id="at_header">
    <div class="row">
        <div class="medium-3 columns">
            <a class="left-off-canvas-toggle show-for-small-only"><span class="fa fa-bars"></span></a>
            <div class="at_logo_container">
                {{#if @blog.logo}}
                    <a href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" />
                    {{else}}
                        <a href="{{@blog.url}}">
                {{/if}}
                    <span class="at_logo_text">{{@blog.title}}</span></a>
            </div>
        </div>
        <div class="medium-9 columns">
            {{> at_navigation }}
        </div>
    </div>
</div>